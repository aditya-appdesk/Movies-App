<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/popularFragment">

    <fragment
        android:id="@+id/popularFragment"
        android:name="com.example.retrofit.ui.PopularFragment"
        android:label="fragment_populour"
        tools:layout="@layout/fragment_populour">
        <action
            android:id="@+id/action_populourFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <argument
            android:name="showActionBar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/topFragment"
        android:name="com.example.retrofit.ui.TopFragment"
        android:label="fragment_top"
        tools:layout="@layout/fragment_top">
        <action
            android:id="@+id/action_topFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailsFragment" />
        <argument
            android:name="showActionBar"
            android:defaultValue="true"
            app:argType="boolean" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="true"
            app:argType="boolean" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailsFragment"
        android:name="com.example.retrofit.ui.MovieDetailsFragment"
        android:label="fragment_movie_details"
        tools:layout="@layout/fragment_movie_details">
        <argument
            android:name="id"
            app:argType="integer"
            app:nullable="false" />
        <argument
            android:name="showActionBar"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="showBottomNav"
            android:defaultValue="false"
            app:argType="boolean" />
    </fragment>
</navigation>