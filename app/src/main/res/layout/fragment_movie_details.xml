<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.MovieDetailsFragment">

    <TextView
        android:id="@+id/tvMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:text="@string/movie_name"
        android:textStyle="bold"
        android:textSize="@dimen/dimen_26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvMovieName"
        tools:text="@string/sampleMovieName" />

     <ImageView
         android:id="@+id/movieNamePoster"
         android:layout_width="match_parent"
         android:layout_height="@dimen/dimen_400dp"
         android:layout_gravity="center"
         android:layout_marginVertical="@dimen/dimen_15dp"
         android:padding="@dimen/dimen_10dp"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/movieName" />

    <TextView
        android:id="@+id/movieStory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/movie_story"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:textSize="@dimen/dimen_20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/movieNamePoster" />

       <TextView
           android:id="@+id/movieOverView"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:gravity="start"
           android:padding="@dimen/dimen_10dp"
           tools:text="@string/movieStory"
           android:textStyle="italic"
           android:textSize="@dimen/dimen_18sp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/movieStory" />


</androidx.constraintlayout.widget.ConstraintLayout>